#!/bin/sh

export SMP=1;

while [ "$1" != "" ]; do
    if [ "$1" = "-smp" ];
    then
        SMP="$2";
        shift;
    fi;
    shift;
done;

sudo @qemu_system@ \
 $DEBUG \
 -m 2G \
 -nographic \
 -machine virt \
 -bios @bootrom_wrkdir@/bootrom.bin \
 -kernel @fw_elf@ \
 @extra_qemu_options@ \
 -netdev tap,id=net0,ifname=tap0,script=no,downscript=no \
 -device virtio-net-device,netdev=net0 \
 -device virtio-rng-pci \
 -smp $SMP
